<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
        android:id="@+id/CurrentlyShowing"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:textSize="25sp"
        android:gravity="center"
        android:textColor="@color/black"
        android:fontFamily="sans-serif-medium"
        android:text="CurrentlyShowing"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="200dp" />

    <TextView
        android:id="@+id/UpcomingMovies"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:textSize="25sp"
        android:gravity="center"
        android:textColor="@color/black"
        android:fontFamily="sans-serif-medium"
        android:text="UpcomingMovies" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="200dp" />


        <TextView
            android:id="@+id/PopularMovies"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:textSize="25sp"
            android:gravity="center"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-medium"
            android:text="PopularMovies" />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="200dp" />

        <TextView
            android:id="@+id/TopRatedMovies"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:textSize="25sp"
            android:gravity="center"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-medium"
            android:text="TopRatedMovies" />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="200dp" />

    </LinearLayout>



</ScrollView>